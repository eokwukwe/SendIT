{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended", 
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "modules":true,
      "arrowFunctions":true,
      "classes":true
  },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ],
    "class-methods-use-this": "off"
  }
}