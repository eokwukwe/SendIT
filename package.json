{
  "name": "sendit",
  "version": "1.0.0",
  "description": "SendIT is a courier service that helps users deliver parcels to different destinations.",
  "main": "./server/server.js",
  "scripts": {
    "babel-node": "babel-node --presets=env",
    "dev": "NODE_ENV=development nodemon --exec npm run babel-node -- ./server/server.js",
    "start": "npm run migration && NODE_ENV=production node --require babel-register ./server/server.js",
    "build": "babel src -d dist",
    "mocha": "mocha --compilers js:babel-register",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --compilers js:babel-register --recursive ./**/**/*.test.js  --timeout=3000 --exit",
    "test-watch": "NODE_ENV=test nodemon --exec 'npm test'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migration": "node --require babel-register -- ./server/config/db.js createUsersTable createOrdersTable",
    "heroku": "node --require babel-register -- ./server/config/db.js createAllTables"
  },
  "engines": {
    "node": "10.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eokwukwe/sendIT.git"
  },
  "author": "Okwukwe Ewurum",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eokwukwe/sendIT/issues"
  },
  "homepage": "https://github.com/eokwukwe/sendIT#readme",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "pg": "^7.6.1",
    "swagger-ui-express": "^4.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/register": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "expect": "^23.6.0",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "supertest": "^3.3.0",
    "swagger-node-express": "^2.1.3"
  }
}
